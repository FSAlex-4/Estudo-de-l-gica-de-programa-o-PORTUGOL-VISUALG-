algoritmo "pratica02"
var
   N, R: inteiro
inicio
      Escreva(" Me fala um número: ")
      Leia(N)
      R <- N%2
      Se (R = 0) entao
         Escreva("Tirando a prova, percebe-se que ", N," é par")
      Senao(R = 1) então
              Escreva(" É chefia pelo visto ", N, " é ímpar")
      FimSe
fimalgoritmo


